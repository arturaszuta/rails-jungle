<tr>
  <td><%= sale.name %></td>
  <td><%= sale.starts_on %></td>
  <td><%= sale.ends_on %></td>
  <td>
    <% if sale.ends_on < Date.current && sale.starts_on < Date.current > %>
      <span class="label label-warning">Upcoming</span>
      <% elsif sale.ends_on > Date.current && sale.starts_on > Date.current %>
      <span class="label label-danger">Finished</span>
      <% else %>
      <span class="label label-success">Active</span>
    <% end %>
  </td>
  <td><%= sale.precent_off %></td>
</tr>